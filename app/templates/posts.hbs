<h1>Posts</h1>

<div class="col-xs-4">
  <ul class="list-unstyled">
    {{!-- This iterates over the implicit `this` --}}
    {{!-- e.g., {{#each this}} --}}
    {{#each}}
      <li>
        {{#link-to 'post' this}} 
          {{!-- This in turn refers to an implicit `this.title` --}}
          {{title}}
          <span class="muted">
            by {{author.name}}
          </span>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>

<div class="col-xs-8">
  {{outlet}}
</div>